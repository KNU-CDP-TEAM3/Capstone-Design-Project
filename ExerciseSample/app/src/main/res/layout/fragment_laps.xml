<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    tools:deviceIds="wear">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/laps_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginTop="30dp"
            android:contentDescription="@null"
            app:tint="#FFEB3B"
            app:srcCompat="@drawable/ic_lap" />

        <TextView
            android:id="@+id/laps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_4dp"
            android:layout_marginBottom="10dp"
            android:enabled="false"
            android:gravity="center_vertical"
            android:minHeight="24dp"
            android:text="Laps"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="#FFEB3B"
            android:textSize="15dp"
            tools:enabled="true"
            tools:ignore="SpUsage"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/laps_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_4dp"
                android:enabled="false"
                android:gravity="center_vertical"
                android:minHeight="32dp"
                android:text="@string/empty_metric"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="32sp"
                tools:enabled="true"
                tools:text="2" />

            <TextView
                android:id="@+id/lap_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/space_4dp"
                android:enabled="false"
                android:gravity="center_vertical"
                android:minHeight="18dp"
                android:text="lap"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="15sp"
                tools:enabled="true"
                tools:ignore="SmallSp"
                tools:text="lap" />
        </LinearLayout>


        <Button
            android:id="@+id/back_Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/border_round"
            android:padding="@dimen/space_4dp"
            android:text="@string/x" />

    </LinearLayout>


</LinearLayout>