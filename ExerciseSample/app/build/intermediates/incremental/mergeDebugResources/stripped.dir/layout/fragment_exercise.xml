<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:padding="35dp"
        tools:ignore="ScrollViewCount,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clock_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_clock"
                app:tint="?colorControlActivated" />

            <TextView
                android:id="@+id/elapsed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lines="1"
                android:padding="5dp"
                android:text="@string/empty_time"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="?colorControlActivated" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/heart_rate_icon"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginTop="3dp"
                    android:contentDescription="@null"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_heart_outline"
                    app:tint="?colorControlActivated" />

                <TextView
                    android:id="@+id/heart_rate_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_4dp"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:minHeight="32dp"
                    android:text="@string/empty_metric"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    tools:enabled="true"
                    tools:text="165" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/calories_icon"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:contentDescription="@null"
                    android:paddingTop="4dp"
                    app:srcCompat="@drawable/ic_calories_burned"
                    app:tint="?colorControlActivated" />

                <TextView
                    android:id="@+id/calories_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_4dp"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:minHeight="32dp"
                    android:text="@string/empty_metric"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    tools:enabled="true"
                    tools:text="200" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/distance_icon"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginTop="3dp"
                    android:contentDescription="@null"
                    android:paddingTop="4dp"
                    app:srcCompat="@drawable/ic_distance"
                    app:tint="?colorControlActivated" />

                <TextView
                    android:id="@+id/distance_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_4dp"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:minHeight="32dp"
                    android:text="@string/empty_metric"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    tools:enabled="true"
                    tools:text="1.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/laps_icon"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginTop="2dp"
                    android:contentDescription="@null"
                    android:paddingTop="4dp"
                    app:srcCompat="@drawable/ic_lap"
                    app:tint="?colorControlActivated" />

                <TextView
                    android:id="@+id/laps_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_4dp"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:minHeight="32dp"
                    android:text="@string/empty_metric"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    tools:enabled="true"
                    tools:text="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/speed_icon"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:contentDescription="@null"
                    android:paddingTop="4dp"
                    app:srcCompat="@drawable/ic_speed"
                    app:tint="?colorControlActivated" />

                <TextView
                    android:id="@+id/speed_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_4dp"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:minHeight="32dp"
                    android:text="@string/empty_metric"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    tools:enabled="true"
                    tools:text="165" />
            </LinearLayout>

            <Button
                android:id="@+id/start_end_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:background="@drawable/button_background"
                android:padding="@dimen/space_4dp"
                android:text="@string/start" />

            <Button
                android:id="@+id/pause_resume_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:enabled="false"
                android:padding="@dimen/space_4dp"
                android:text="@string/pause"
                tools:enabled="true" />

            <TextView
                android:id="@+id/blank_text"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </TextView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>